<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:text="My Card View"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="542dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp"
        android:background="@drawable/rounded_corners"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="306dp"
            android:layout_margin="10dp"
            android:src="@drawable/lespaul">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guitarra Gibson Les Paul"
            android:textSize="17dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginLeft="130dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La Les Paul Classic de la nueva Epiphone Modern Collection presenta la guitarra eléctrica más popular del mundo a un precio que cualquiera puede pagar. Con el aspecto clásico de una Les Paul Standard de finales de los 50 con humbuckers Alnico Classic PRO ™ de bobina abierta 'cebra' con electrónica"
            android:textSize="15dp"
            android:fontFamily="arial"
            android:layout_marginTop="55dp"
            android:background="#F5F5DC"
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="130dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12,700"
            android:fontFamily="sans-serif"
            android:textStyle="italic|bold"
            android:background="#F0E68C"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="290dp">

        </TextView>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>